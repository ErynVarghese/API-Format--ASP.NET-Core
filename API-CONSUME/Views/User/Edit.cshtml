@model API_Consume.Models.UserModel

@{
    ViewBag.Title = "Client Registration";
}

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">User Type</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.User_ID, new { @class = "form-control", @id = "txtUserType", @placeholder = "Enter User Type" })
                    <span id="lblusertype" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">User Code</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.User_code, new { @class = "form-control", @id = "txtUserCode", @placeholder = "User Code" })

                    <span id="lblusercode" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Name</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName", @placeholder = "Enter Name" })
                    <span id="lblname" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Email</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "txtEmail", @placeholder = "Enter Email" })
                    <span id="lblemail" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Contact No</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @id = "txtPhone", @placeholder = "Enter Phone Number" })
                    <span id="lblphone" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">User Name</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.User_name, new { @class = "form-control", @id = "txtUserName", @placeholder = "Enter User Name" })
                    <span id="lblusername" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Password</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @id = "txtPassword", @placeholder = "Enter Password" })
                    <span id="lblpassword" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Address</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control remarkField", @id = "txtAddress", @placeholder = "Enter Address" })
                    <span id="lbladdress" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Location</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.LocationName, new { @class = "form-control", @id = "txtlocation", @placeholder = "Enter Location" })
                    <span id="lbllocation" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Service Type</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.ServiceID, new { @class = "form-control", @id = "txtServiceType", @placeholder = "Enter Service Type" })
                    <span id="lblservice" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Support Type</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.TextBoxFor(model => model.UserTypeID, new { @class = "form-control", @id = "txtSLA", @placeholder = "Enter Support Type" })
                    <span id="lblsla" style="color:#ff0000"></span>
                </div>
            </div>
            <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Active</div>
                <div class="col-lg-8 col-sm-12">
                    @Html.CheckBoxFor(model => model.Active)
                </div>
            </div>

                <div class="row paddingtb-1">
                <div class="col-lg-4 col-sm-12">Employee Image</div>
                <div class="col-lg-8 col-sm-12">
                    @if (ViewBag.ImagePath != null)
                    {
                        <img src="@ViewBag.ImagePath" alt="Student Image" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <p>No image found for this user.</p>
                    }
                    <span id="lblimage" style="color:#ff0000"></span>

               
                    <a href="@Url.Action("UploadImage","User", new { id = Model.User_ID })">Change Picture</a>
                </div>

            </div>


            <div class="col-2"></div>
            <div class="col-lg-12 col-sm-12" style="text-align:center;padding:1% 0 1%">
                <button class="btn btn-success btn-sm" type="submit">Save</button>
                <a href="~/Registration/GetAll" class="btn btn-danger btn-sm">Cancel</a>
            </div>
        </div>



        <div class="col-lg-6">
        </div>
    </div>
}
