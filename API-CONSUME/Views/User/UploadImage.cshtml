
@model API_Consume.Models.UserModel

@{
    ViewData["Title"] = "Upload Image";
}

<h2>Upload Image</h2>

<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="id">Employee ID:</label>
        <input type="number" name="id" id="id" value="@ViewBag.EmployeeId" required />
    </div>

    <div class="form-group">
        <label for="fileUpload">Upload Image</label>
        <input type="file" name="fileUpload" accept="image/*" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>


}
